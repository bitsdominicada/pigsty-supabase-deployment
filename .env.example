# ============================================
# PIGSTY SUPABASE DEPLOYMENT - CONFIGURATION
# ============================================
# Copy this file to .env and fill with your actual values
# NEVER commit .env to git!

# ============================================
# VPS CONNECTION (Contabo)
# ============================================
VPS_HOST=your.vps.ip.address
VPS_ROOT_PASSWORD=your_root_password
VPS_SSH_PORT=22

# Deploy user that will be created (non-root)
DEPLOY_USER=deploy
DEPLOY_USER_PASSWORD=change_this_strong_password

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Domain for Supabase (can be IP if no domain yet)
SUPABASE_DOMAIN=supa.yourdomain.com
SUPABASE_API_EXTERNAL_URL=https://supa.yourdomain.com

# JWT Secret (minimum 40 characters) - Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-40-characters-change-this

# JWT Tokens - Generate at: https://supabase.com/docs/guides/self-hosting/docker#api-keys
# Or use the script: scripts/generate-jwt-keys.sh
ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.change_this
SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.change_this

# ============================================
# POSTGRESQL CONFIGURATION
# ============================================
POSTGRES_VERSION=17
POSTGRES_PASSWORD=DBUser.Supa.Change.This
PG_ADMIN_PASSWORD=DBUser.DBA.Change.This

# ============================================
# GRAFANA/MONITORING
# ============================================
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password

# ============================================
# MINIO (S3 Storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_minio_password

# ============================================
# SMTP (Optional - for email notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER_NAME=Supabase

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 1 * * *"

# ============================================
# SSL/TLS CERTIFICATES
# ============================================
LETSENCRYPT_EMAIL=your-email@example.com
USE_LETSENCRYPT=false
